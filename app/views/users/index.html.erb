<div class="row">
    <% @users.each do |user| %>
    <% unless user.username.nil? %>
      <div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 profile" id="user_profile"> <!-- User Profile ----------------------------->
          <div class ="col-sm-12 col-md-12"> <!-- 論文のタイトル -->
            <h2 class="profile-header"><%= link_to user.thesisName,user_path(user), class:"profile-header" %></h2>
          </div>
          
          <div class="col-sm-3 col-md-3" > <!-- ユーザーの属性 -->
            <div class="profile-left"><span class="glyphicon glyphicon glyphicon-book" aria-hidden="true"></span> <%= user.major %></div>
            <div class="profile-left"><span class="glyphicon glyphicon glyphicon-user" aria-hidden="true"></span> <%=user.username %></div>
            <div class="profile-left"><i class="fa fa-paperclip" aria-hidden="true"></i> <%= user.get_upvotes.size %>クリップ</div>
            <div class="profile-left"><span class="glyphicon glyphicon glyphicon-education" aria-hidden="true"></span> <%=user.graduate %></div>
            <!---------------------もしクリップしていれば、クリップを外し、クリップしていなければクリップを追加する------------------------------>
            <% if current_user.voted_for? user %>
                  <div class="profile-left clip-button-small"><i class="fa fa-paperclip" aria-hidden="true"></i><%= link_to" クリップを外す",dislike_user_path(user),method: :put %></div>
            <% else %>
                  <div class="profile-left clip-button-small"><i class="fa fa-paperclip" aria-hidden="true"></i><%= link_to" クリップする",like_user_path(user),method: :put %></div>
            <% end %>
            <!---------------------もし自分であれば表示しない------------------------------>
            <% if user != current_user %>
                <div class="profile-left request-button-small"><i class="fa fa-user-plus" aria-hidden="true"></i><%= link_to " 友達申請する", follow_user_path(user)%></div>
                <!---------------------もし友達であれば、本名とURLが、もし友達でなければ友達申請リクエストを送る------------------------------>
                <% if %>
                
                <% else %>
                
                <% end %>
            <% end %>
          </div>
          
          <div class="col-sm-9 col-md-9" id="profile-abstract"> <!-- 論文/興味のabstract -->
            <div class="profile-right">
                <div style="text-align:center;border-bottom:1px solid #606060 ;color:#00B0BC;font-size:26px"><i class="fa fa-info-circle" aria-hidden="true"></i>この論文について</div>
                <div style="padding:20px"><%= user.abstract %></div>
            </div>
            <div class="profile-right">
                <div style="text-align:center;border-bottom:1px solid #606060  ;color:#00B0BC;font-size:26px"><i class="fa fa-heart" aria-hidden="true"></i>興味・関心</div>
                <div style="padding:20px"><%=user.bio %></div>
            </div>
          </div>
      </div> <!-- User Profile ----------------------------->
    <% end %>
    <% end %>
</div><!-- row ----------------------------->
