<div class="row">
        <div class="col-sm-10 col-md-10 col-sm-offset-1 col-md-offset-1">
            <h3>ユーザー名</h3><div><%= image_tag @user.avatar_url, :size => "50x50" %></div>
            <div><%=@user.username%></div>
            <% if current_user.id != @user.id %> <!-- サインインしたユーザーと閲覧しているユーザーが異なる場合、評価ボタンを押す -->
                <i class="fa fa-thumbs-o-up" aria-hidden="true"></i><%= link_to "おもろいネ", like_user_path(@user), method: :put %>
                <i class="fa fa-thumbs-o-up" aria-hidden="true"></i><%= link_to "ネタだネ", dislike_user_path(@user), method: :put %>
            <% else %>
                <div class="btn btn-danger" href="#"><i class="fa fa-thumbs-o-up"></i><%= @user.get_upvotes.size %>　ニッチだネ</div>
                <div class="btn btn-primary" href="#"><i class="fa fa-thumbs-o-up"></i> <%= @user.get_downvotes.size %>　ネタだネ</div>
            <% end %>
            <% if @user == current_user %><p><a href="<%=edit_user_path(@user.id)%>" class="btn btn-primary" role="button">編集する</a></p><%end%>
            <h3>ステータス</h3>
            <div><%= @user.graduate %></div>
            <h3>興味・関心</h3>
            <h3>論文の分野</h3>
            <div><%= @user.major %></div>
            <h3>論文のタイトル</h3>
            <div><%= @user.thesisName %></div>
            <h3>なぜ書いたか</h3>
            <div><%= @user.abstract %></div>
        </div>
        
        <div class ="col-sm-12 col-md-12">
            <iframe src=<%= @user.attachment %> style="border: 0" width="100%" height="600" frameborder="0" scrolling="no"></iframe>
        </div>
    </div>
    </div>
</div>