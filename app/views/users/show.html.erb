<div class="row">
    <div class="row"> 
      <div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 profile" id="user_profile"> <!-- User Profile ----------------------------->
        <div class="row">
          
          <div class ="col-sm-12 col-md-12"> <!-- 論文のタイトル -->
            <h2 class="profile-header"><%= @user.thesisName %></h2>
          </div>
         
         </div>
         
         <div class="row">
          <div class="col-sm-3 col-md-3" > <!-- ユーザーの属性 -->
            <div class="profile-left"><span class="glyphicon glyphicon glyphicon-book" aria-hidden="true"></span> <%= @user.major %></div>
            <div class="profile-left"><span class="glyphicon glyphicon glyphicon-user" aria-hidden="true"></span> <%=@user.username %></div>
            <div class="profile-left"><i class="fa fa-paperclip" aria-hidden="true"></i> <%= @user.get_upvotes.size %></div>
            <div class="profile-left"><i class="fa fa-heart" aria-hidden="true"></i></div>
                <% @user.interest_list.each do |tag| %>
                    <span class="tag-button"><%= tag %></span>
                <% end %>
            <div class="profile-left"><span class="glyphicon glyphicon glyphicon-education" aria-hidden="true"> <%=@user.graduate %></div>
            <div class="profile-left clip-button-small"><i class="fa fa-paperclip" aria-hidden="true"></i><%= link_to" クリップする",like_user_path(@user),method: :put %></div>
            <% if @user.email.present?  && current_user.follow(@user).nil?%>
                <div class="profile-left request-button-small"><i class="fa fa-user-plus" aria-hidden="true"></i><%= link_to "　コンタクトリクエストを送る", follow_user_path(@user)%></div>
            <% end %>
          </div>
          
          <div class="col-sm-9 col-md-9" id="profile-abstract"> <!-- 論文/興味のabstract -->
            <div class="profile-right">
                <div style="border-bottom:1px solid #606060 ;color:#00B0BC;font-size:26px"><i class="fa fa-info-circle" aria-hidden="true"></i>この論文について</div>
                <div style="padding:20px"><%= @user.abstract %></div>
            </div>
            <div class="profile-right">
                <div style="border-bottom:1px solid #606060 ;color:#00B0BC;font-size:26px"><i class="fa fa-heart" aria-hidden="true"></i>興味・関心</div>
                <div style="padding:20px"><%=@user.bio %></div>
            </div>
          </div>
          
         </div>
        
         <div class="row" style="margin-top:20px">
             <div class ="col-sm-12 col-md-12">
                <% if @user.attachment.present? %>
                <iframe src=<%= @user.attachment %> style="border: 0" width="100%" height="600" frameborder="0" scrolling="no"></iframe>
                <% else %>
                <p>このユーザーはまだ論文をアップロードしていません。</p>
                <% end %>
             </div>
         </div>
         
          </div>
      </div> <!-- User Profile ----------------------------->
</div><!-- row ----------------------------->
