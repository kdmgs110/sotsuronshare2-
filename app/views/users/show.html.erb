<!----------- 詳細画面@show.html.erb ---------------------->
<div class="row">
        <div class="col-sm-12 col-md-12">
            <span class="glyphicon glyphicon-book detail-header"></span><span class="detail-header"><%= @user.thesisName %></span>
                <div><%= @user.major %></div>
            <div class="detail-header">要約</div>
                <div class="detail-abstract"><%= @user.abstract %></div>
                <span class="glyphicon glyphicon-user">
                    <% if @user == current_user %>
                        <a href="<%=edit_user_path(@user.id)%>"><%=@user.username%></a>
                    <% else %>
                        <%=@user.username%>
                    <%end%>
                </span>
            <div><%= image_tag @user.avatar_url, :size => "50x50" %></div>
                <span class="glyphicon glyphicon-education"><%= @user.graduate %></span>
            <div class="detail-header">興味・関心</div>
                <div class="detail-abstract"><%= @user.bio%></div>
            </div>
        
        <div class ="col-sm-12 col-md-12">
            <iframe src=<%= @user.attachment %> style="border: 0" width="100%" height="600" frameborder="0" scrolling="no"></iframe>
        </div>
        
        <div class ="col-sm-12 col-md-12">
            <%= link_to "クリップする", like_user_path(@user) %> 
        </div>
        
        <div class ="col-sm-12 col-md-12">
            <%= link_to "友達申請する", users_path(@user), method: :post %>
            
        </div>
        
        
    </div>
    </div>
</div>