<div class="row">
    <div class="row"> 
      <div class="col-sm-10 col-sm-offset-1 col-md-10 col-md-offset-1 profile" id="user_profile"> <!-- User Profile ----------------------------->
        <div class="row">
          
          <div class ="col-sm-12 col-md-12"> <!-- 論文のタイトル -->
            <h2 class="profile-header"><%= @user.thesisName %></h2>
          </div>
         
         </div>
         
         <div class="row">
          <div class="col-sm-3 col-md-3" > <!-- ユーザーの属性 -->
            <div class="profile-left"><%= @user.major %></div>
            <div class="profile-left">名前：<%=@user.username %></div>
            <div class="profile-left"><i class="fa fa-bookmark" aria-hidden="true"></i>:<%= @user.get_upvotes.size %></div>
            <div class="profile-left"><%=@user.graduate %></div>
            <div class="profile-left"><!--ここにタグが入る予定です --></div>
          </div>
          
          <div class="col-sm-9 col-md-9" id="profile-abstract"> <!-- 論文/興味のabstract -->
            <div class="profile-right" ><%= @user.abstract %></div>
            <div class="profile-right"><%=@user.bio %></div>
          </div>
         </div>
        
         <div class="row">
             <div class ="col-sm-12 col-md-12">
                <iframe src=<%= @user.attachment %> style="border: 0" width="100%" height="600" frameborder="0" scrolling="no"></iframe>
             </div>
         </div>
         
         <div class="row">
             <div class="col-sm-4 col-sm-offset-1 com-md-4 col-md-offset-1 clip-button">
                <i class="fa fa-paperclip" aria-hidden="true"></i><%= link_to" クリップ",like_user_path(@user),method: :put %>
             </div>
            
             <div class ="col-sm-4 col-md-4 clip-button">
                <i class="fa fa-paperclip" aria-hidden="true"><%= link_to "友達申請する", users_path(@user), method: :post %>
             </div>
          </div>
      </div> <!-- User Profile ----------------------------->
</div><!-- row ----------------------------->
