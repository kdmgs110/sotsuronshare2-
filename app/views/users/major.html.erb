    <% @users.each do |user| %>
    <% unless user.username.nil? %>
      <div class="col-xs-12 col-sm-12 col-md-10 col-md-offset-1" id="user_profile"> <!-- User Profile ----------------------------->
        <div class="col-xs-12 col-sm-12 col-md-12  profile-header"><%= image_tag user.attachment, :size =>"50x50" %><%= link_to user.username, user_path(user)%></div>
          <div class="col-xs-12 col-sm-12 col-md-12" > <!-- ユーザーの属性 -->
            <div class="profile-left"><i class="fa fa-graduation-cap" aria-hidden="true"></i> <%= user.years %></div>
            <div class="profile-left"><span class="glyphicon glyphicon glyphicon-book" aria-hidden="true"></span> <%= user.major %></div>
            <div class="profile-left"><i class="fa fa-heart" aria-hidden="true"></i>　キーワード</div>
                <% user.interest_list.each do |tag| %>
                    <span class="tag-button"><%= tag %></span>
                <% end %>
            <div class="profile-left"><span class="glyphicon glyphicon glyphicon-book" aria-hidden="true"></span> 論文(<%= user.posts.count %>)</div>
            <% if user.posts.present? %>
                <% user.posts.each do |post| %>
                <div class="profile-left" id="posts-content">
                  <div>
                    <i class="fa fa-sticky-note-o" aria-hidden="true"></i> <%= link_to post.title, post_path(post) %>
                    <i class="fa fa-comment-o" aria-hidden="true"></i> <%= post.comments.count %> <i class="fa fa-heart-o" aria-hidden="true"></i> <%= post.votes_for.size %>
                  </div>
                  <div><span class="glyphicon glyphicon glyphicon-book" aria-hidden="true"></span><%= post.major %>
                    <% post.keyword_list.each do |tag| %>
                      <span class="tag-button"><%= tag %></span>
                    <% end %>
                  </div>
                </div>
                <% end %>
            </div>
            <% end %>
            
            <!--- USERがPDFを持っていたら、PDFへのリンクをはる -->
        
          </div>
         </div>
    <% end %>
    <% end %>
