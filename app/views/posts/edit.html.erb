<div class="row" style="padding-top:100px">  
    <div class="form-group">
        <%= form_for(@post, :html => {:class => "form"})do |f| %>
       <div class="col-xs-12 col-sm-12 col-md-12 col-xs-12" id="profile-abstract"> <!-- 論文/興味のabstract -->
                <div class="profile-left">
                    <div style="border-bottom:1px solid #606060"><i class="fa fa-heart" aria-hidden="true"></i>論文名</div>
                    <div style="padding:20px"><%= f.text_area :title, style: :"width:100%" %></div>
                </div>
                
                <div class="profile-left">
                    <div style="border-bottom:1px solid #606060"><i class="fa fa-info-circle" aria-hidden="true"></i>分野</div>
                    <div style="padding:20px">
                          <%= f.select :major,([
                    [""],
                    ["アメリカ研究 American Studies"],
                    ["文化人類学 Anthropology"],
                    ["アジア研究 Asian Studies"],
                    ["生物学 Biology"],
                    ["経営学 Business"],
                    ["化学 Chemistory"],
                    ["教育学 Education"],
                    ["経済学 Economics"],
                    ["環境学 Environmental Studies"],
                    ["グローバル研究 Global Studies"],
                    ["ジェンダー・セクシャリティー研究 Gender and Sexuality Studies"],
                    ["歴史学 History"],
                    ["国際関係学 International Relations"],
                    ["情報科学 Information Science"],
                    ["日本研究 Japan Studies"],
                    ["法学 Law"],
                    ["言語教育 Language Education"],
                    ["文学 Literatures"],
                    ["言語学 Linguistics"],
                    ["メディア・コミュニケーション・文化 Media, Communication, and Culture"],
                    ["数学 Mathematics"],
                    ["音楽 Music"],
                    ["平和研究 Peace Studies"],
                    ["哲学・宗教学 Philosophy and Religion"],
                    ["物理学 Physics"],
                    ["政治学 Politics"],
                    ["公共政策 Public Policy"],
                    ["心理学 Psychology"],
                    ["社会学 Sociology"],
                    ["その他 Else"]
                    ]) %>
                    </div>
                </div>
                
                    <div class="profile-left">
                        <div style="border-bottom:1px solid #606060"><i class="fa fa-info-circle" aria-hidden="true"></i>分野</div>
                         <div><%= text_field_tag 'post[keyword_list]', @post.keyword_list.join(','), "data-role" => "tagsinput", :class =>"form" %></div>
                    </div>
                    
                <div class="profile-left">
                    <div style="border-bottom:1px solid #606060"><i class="fa fa-info-circle" aria-hidden="true"></i>要約</div>
                    <div style="padding:20px"> <%= f.text_area :summary, style: :"width:100%"  %></div>
                </div>
        
                 <div class="profile-left">
                    <div style="border-bottom:1px solid #606060"><i class="fa fa-info-circle" aria-hidden="true"></i>PDFを添付</div>
                    <div style="padding:20px"><%= f.file_field :file %></div>
                </div>
                 
                 <%= f.submit '変更する' %>
                <% end %>
        </div>
    </div>
 </div>